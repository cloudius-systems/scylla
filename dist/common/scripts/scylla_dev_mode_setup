import os
import sys
import argparse
from scylla_util import *

if __name__ == '__main__':
    if not is_nonroot() and os.getuid() > 0:
        print('Requires root permission.')
        sys.exit(1)
    parser = argparse.ArgumentParser(description='Modify Scylla running mode.')
    parser.add_argument('--developer-mode', type=int, required=True,
                        help='enable/disable developer mode')
    args = parser.parse_args()

    developer_mode = int(is_developer_mode())
    if args.developer_mode != developer_mode:
        scylla_yaml_modify('developer_mode', bool(args.developer_mode))
